@model Kandidattest.Models.VMsignup
@{
    ViewBag.Title = "Default";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" language="javascript">
    (function ($) {
        $.validator.unobtrusive.adapters.addBool("mandatory", "required");
    }(jQuery));
</script>

<div class="row">
    <div class="large-12 columns">
        <h1>Oxx Academy - Innmeldingsskjema</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="large-12 columns">
                    @Html.LabelFor(model => model.Fornavn)
                    @Html.ValidationMessageFor(model => model.Fornavn, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Fornavn, new { @id = "Fornavn", htmlAttributes = new { @class = "form-control input-lg" } })

                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    @Html.LabelFor(model => model.Etternavn)
                    @Html.ValidationMessageFor(model => model.Etternavn, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Etternavn, new { @id = "Etternavn", htmlAttributes = new { @class = "form-control input-lg" } })


                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    @Html.LabelFor(model => model.Epost)
                    @Html.ValidationMessageFor(model => model.Epost, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Epost, new { @id = "Epost", htmlAttributes = new { @class = "form-control input-lg" } })


                </div>
            </div>

            <div class="row">
                <div class="large-12 columns">
                    @Html.LabelFor(model => model.Fødselsnummer)
                    @Html.ValidationMessageFor(model => model.Fødselsnummer, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Fødselsnummer, new { @id = "Fødselsnummer", HtmlAttribures = new { @class = "form-control input-lg" } })


                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input data-val="true" data-val-mandatory="Vennligst godta vilkårene." id="isAccepted" name="isAccepted" type="checkbox" value="true" /><a href="#" data-toggle="modal" data-target="#t_and_c_m">Ja, jeg godtar vilkårene</a> <br/>
                    <input name="isAccepted" type="hidden" value="false" />
                    <span class="field-validation-valid" data-valmsg-for="isAccepted" data-valmsg-replace="true"></span>

                </div>
            </div>
            <div class="row">
                <div class="large-4 columns">

                    <input type="submit" value="Send inn" class="btn btn-success btn-lg" placeholder="large-4.columns" />
                </div>
            </div>
        }
    </div>
</div>

